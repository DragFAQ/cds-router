{
  "name": "koa-joi-swagger-ts",
  "version": "1.1.0",
  "description": "Router with koa, joi and swagger on typescript",
  "keywords": [
    "koa",
    "joi",
    "swagger",
    "typescript",
    "router"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "tsc --declaration",
    "test": "./node_modules/.bin/jest --ci --coverage --no-cache",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:DragFAQ/koa-joi-swagger-ts.git"
  },
  "author": "DragFAQ",
  "license": "ISC",
  "dependencies": {
    "@types/joi": "^14.3.1",
    "@types/koa-router": "^7.0.40",
    "@types/lodash": "^4.14.123",
    "joi": "^14.3.1",
    "joi-to-swagger": "^3.1.0",
    "koa-router": "^7.4.0",
    "koa2-swagger-ui": "^2.13.2",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/jest": "^23.3.14",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.4.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/src/__test__/.*.test.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
